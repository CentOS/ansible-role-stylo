[Unit]
Description=Stylo MQTT subscriber
DefaultDependencies=no
After=network.target
After=beanstalkd.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User={{ stylo_local_user }}
Group={{ stylo_local_user }}
ExecStart=/home/{{ stylo_local_user }}/stylo-code/mqtt_subscribe
Restart=on-failure
RestartSec=1
